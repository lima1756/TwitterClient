<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ivanmorett.twitterclient"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="23"
        android:targetSdkVersion="27" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name="com.ivanmorett.twitterclient.TwitterApp"
        android:allowBackup="true"
        android:debuggable="true"
        android:icon="@drawable/ic_launcher_foreground"
        android:label="TwitterClient"
        android:testOnly="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.ivanmorett.twitterclient.LoginActivity"
            android:label=""
            android:theme="@style/AppTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="@string/intent_host"
                    android:scheme="@string/intent_scheme" />
            </intent-filter>
        </activity>
        <activity android:name="com.ivanmorett.twitterclient.TimelineActivity" />
        <activity android:name="com.ivanmorett.twitterclient.TweetDetailsActivity" />

        <provider
            android:name="com.android.tools.ir.server.InstantRunContentProvider"
            android:authorities="com.ivanmorett.twitterclient.com.android.tools.ir.server.InstantRunContentProvider"
            android:multiprocess="true" />
    </application>

</manifest>